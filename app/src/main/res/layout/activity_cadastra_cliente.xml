<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.activity.CadastraClienteActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />

        <TextView
            android:id="@+id/cadastra_cliente_textview_nome_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:text="Nome"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/cadastra_cliente_textview_nome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/cadastra_cliente_textview_nome_layout"
            app:layout_constraintTop_toBottomOf="@id/cadastra_cliente_textview_nome_layout">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/cadastro_nome_comercio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nome do comércio"
                android:inputType="textCapWords" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/cadastra_cliente_textview_endereco_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:text="Endereço"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cadastra_cliente_textview_nome" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/cadastro_textview_endereco"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:layout_constraintEnd_toEndOf="@id/cadastra_cliente_textview_nome"
            app:layout_constraintStart_toStartOf="@id/cadastra_cliente_textview_nome"
            app:layout_constraintTop_toBottomOf="@id/cadastra_cliente_textview_endereco_layout">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/cadastro_nome_responsavel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Endereço"
                android:inputType="textCapWords" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/cadastra_cliente_textview_responsavel_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:text="Responsável"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cadastro_textview_endereco" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/cadastra_cliente_textview_responsavel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:layout_constraintEnd_toEndOf="@id/cadastro_textview_endereco"
            app:layout_constraintStart_toStartOf="@id/cadastro_textview_endereco"
            app:layout_constraintTop_toBottomOf="@id/cadastra_cliente_textview_responsavel_layout">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/cadastro_endereco"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nome do responsável pelo comércio"
                android:inputType="textCapWords" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/cadastra_cliente_textview_telefone_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:text="Telefone"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cadastra_cliente_textview_responsavel" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/cadastra_cliente_textview_telefone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@id/cadastra_cliente_textview_responsavel"
            app:layout_constraintStart_toStartOf="@id/cadastra_cliente_textview_responsavel"
            app:layout_constraintTop_toBottomOf="@id/cadastra_cliente_textview_telefone_layout">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/cadastro_telefone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Telefone"
                android:inputType="number" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/botao_salvar_cliente"
            android:layout_width="230dp"
            android:layout_height="66dp"
            android:background="@drawable/botao_arredondado_amarelo"
            android:text="salvar"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cadastra_cliente_textview_telefone"
            android:layout_marginBottom="8dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>